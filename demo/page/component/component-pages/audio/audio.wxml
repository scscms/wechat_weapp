<view class="page">
    <view class="page__hd">
        <text class="page__title">audio</text>
        <text class="page__desc">音频</text>
    </view>
    <view class="page__bd">
        <view class="section tc">
          <audio
            src="{{current.src}}"
            author="{{current.author}}"
            name="{{current.name}}"
            poster="{{current.poster}}"
            action="{{audioAction}}"
            bindplay="audioPlayed"
            controls>
          </audio>
        </view>
    </view>
</view>
